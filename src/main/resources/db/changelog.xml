<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <include file="db/changelog/2024/02/22-01-base-model.xml"/>
    <include file="db/changelog/2024/02/22-02-user-authority.xml"/>

    <changeSet id="1708095414794-1" author="budarov">
        <insert tableName="user_">
            <column name="username" value="admin"/>
            <column name="password" value="{noop}admin"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
    </changeSet>
    <changeSet id="1708095439948-1" author="budarov">
        <insert tableName="authority">
            <column name="authority" value="ROLE_ADMIN"/>
            <column name="description" value="Full access to application"/>
        </insert>
    </changeSet>
    <changeSet id="1708095481786-1" author="budarov">
        <insert tableName="user__authorities">
            <column name="authorities_id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>
